@{
    ViewData["Title"] = "Slide";
}
@section Styles{
    <link href="~/admin-app/controllers/slide/index.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/admin-app/controllers/slide/index.js"></script>
    <script>
        var slideObj = new SlideController();
        slideObj.initialize();
    </script>
}

<div class="app-content icon-content">
    <div class="section">
        <!-- Page-header opened -->
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Trang Chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
            <div class="mt-3 mt-lg-0">
                <div class="d-flex align-items-center flex-wrap text-nowrap">
                    <button type="button" class="btn btn-success btn-icon-text mr-2 mb-2 mb-md-0"><i class="fe fe-download"></i>Import</button>
                    <button type="button" class="btn btn-secondary btn-icon-text mr-2 mb-2 mb-md-0"><i class="fe fe-printer"></i>Print</button>
                    <button type="button" class="btn btn-primary btn-icon-text mb-2 mb-md-0"><i class="fe fe-download-cloud "></i>Download</button>
                </div>
            </div>
        </div>
        <!-- Page-header closed -->
        <!-- row opened -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Danh Sách Bài Viết</div>
                        <div class="card-options">
                            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive product-datatable">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-8">
                                        <div id="example_filter" class="dataTables_filter">
                                            <label>Tìm Kiếm:<input type="search" id="txt-search-keyword" class="form-control form-control-sm" placeholder="" aria-controls="example"></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4">
                                        <div class="dataTables_component">
                                            <button id="btn-create" type="button" class="btn btn-sm btn-success " data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-plus"></i> Tạo Mới</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                                            <thead>
                                                <tr>
                                                    <th>Tên</th>
                                                    <th>Image</th>
                                                    <th>Url</th>
                                                    <th>Desciption</th>
                                                    <th>Tin Hot</th>
                                                    <th>Trạng Thái</th>
                                                    <th>Chức Năng</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                                @await Component.InvokeAsync("Paging")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>{{{Image}}}</td>
        <td>{{{Url}}}</td>
        <td>{{Description}}</td>
        <td width="90">{{{HotFlag}}}</td>
        <td width="90">{{{Status}}}</td>
        <td width="90">
            <a href="#" data-id="{{Id}}" class="btn-edit btn btn-warning btn-sm mb-2 mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Cập Nhật"><i class="fa fa-edit"></i></a>
            <a href="#" data-id="{{Id}}" class="btn-delete btn btn-danger btn-sm mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Xóa"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
</script>
@Html.Partial("_AddEditModal")
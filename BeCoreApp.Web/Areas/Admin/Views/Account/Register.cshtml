@model RegisterViewModel
@{
    Layout = "_LayoutAccount";
}

@section Styles{}

@section Scripts{
    <script src="~/admin-app/controllers/account/register.js" asp-append-version="true"></script>
    <script>
        var register = new registerController();
        register.initialize();
    </script>
}
<style>
    .form-control-label{
        display:flex;
    }
</style>

<div class="page">
    <div class="">
        <div class="container">
            <div class="">
                <div class="col-xl-4 justify-content-center mx-auto text-center mt-3">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="card-body p-6 about-con pabout">
                                    <div class="text-center">
                                        <img src="~/client-side/icd/img/ICDlogo3.png" style="height:70px;" class="header-brand-img mx-auto text-center mb-5" />
                                    </div>
                                    <div class="card-title text-center  mb-4">REGISTER</div>
                                    <form>
                                        @Html.AntiForgeryToken()

                                        <div class="form-group">
                                            <label class="form-control-label">Full Name</label>
                                            <input class="form-control" type="text" id="txtFullName" name="txtFullName">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Referral</label>
                                            <input class="form-control" type="text" value="@Model.ReferralId" id="txtReferralId">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">User Name</label>
                                            <input class="form-control" type="text" id="txtUserName" name="txtUserName">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Password</label>
                                            <input class="form-control" type="password" id="txtPassword" name="txtPassword">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Password Confirm</label>
                                            <input class="form-control" type="password" id="txtConfirmPassword" name="txtConfirmPassword">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Email</label>
                                            <input class="form-control" type="text" id="txtEmail" name="txtEmail">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Phone Number</label>
                                            <input class="form-control" type="text" id="txtPhoneNumber" name="txtPhoneNumber">
                                        </div>

                                        <div class="form-group">
                                            <label class="custom-control custom-checkbox ">
                                                <input type="checkbox" id="cbAgree" class="custom-control-input ">
                                                <span class="custom-control-label">I agree with the terms and conditions</span>
                                            </label>
                                        </div>
                                        <div class="form-footer mt-2 text-center">
                                            <a class="btn btn-success-ct" id="btnRegister"><i class="fa fa-registered"></i> REGISTER</a>
                                        </div>
                                    </form>
                                    <div class="text-center  mt-3 mb-0">
                                        Do you already have an account? <a href="/Admin/Account/Login" class="text-primary">Login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

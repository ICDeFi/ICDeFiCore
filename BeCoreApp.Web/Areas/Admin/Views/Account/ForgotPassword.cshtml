@{
    Layout = "_LayoutAccount";
}

@section Styles{}

@section Scripts{
    <script src="~/admin-app/controllers/account/forget.js" asp-append-version="true"></script>
    <script>
        var forget = new ForgetController();
        forget.initialize();
    </script>
}

<div class="page">
    <div class="">
        <div class="container">
            <div class="">
                <div class="col-xl-4 justify-content-center mx-auto text-center">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <form>
                                    @Html.AntiForgeryToken()
                                    <div class="card-body p-6 about-con pabout">
                                        <div class="text-center">
                                            <img src="~/client-side/icd/img/ICDlogo3.png" style="height:70px;" class="header-brand-img mx-auto text-center mb-5" />
                                        </div>
                                        <div class="card-title text-center mb-4">Forgot password</div>
                                        <div class="form-group">
                                            <input type="email" class="form-control" id="txtEmail" placeholder="Email">
                                        </div>
                                        <div class="form-footer mt-1 mb-5 text-center">
                                            <a class="btn btn-success-ct" id="btnForget"><i class="fa fa-send"></i> SEND</a>
                                        </div>
                                        <hr class="divider">
                                        <div class="text-center text-muted mt-3 ">
                                            Return to screen <a href="/Admin/Account/Login" class="text-primary">Login</a>.
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
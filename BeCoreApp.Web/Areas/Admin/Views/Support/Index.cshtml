@{
    ViewData["Title"] = "Support";
}
@section Styles{
    <link href="~/admin-app/controllers/support/index.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/admin-app/controllers/support/index.js"></script>
    <script>
        var supportObj = new SupportController();
        supportObj.initialize();
    </script>
}

<div class="app-content icon-content">
    <div class="section">
        <!-- Page-header opened -->
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
            <div class="mt-3 mt-lg-0"></div>
        </div>
        <!-- Page-header closed -->
        <!-- row opened -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Support</div>
                        <div class="card-options">
                            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive product-datatable">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-8">

                                    </div>
                                    <div class="col-sm-12 col-md-4">
                                        <div class="dataTables_component">
                                            <button id="btn-create" type="button" class="btn btn-sm btn-success " data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-plus"></i> Create</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Content</th>
                                                    <th>Anwser</th>
                                                    <th>Status</th>
                                                    <th>Function</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                                @await Component.InvokeAsync("Paging")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>{{{RequestContent}}}</td>
        <td>{{{ResponseContent}}}</td>
        <td>{{{Type}}}</td>
        <td>
            <a href="#" data-id="{{Id}}" class="btn-view btn btn-info btn-sm mb-2 mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Chi Tiết"><i class="fa fa-eye"></i> Detail</a>
        </td>
    </tr>
</script>
@Html.Partial("_AddModal")
@Html.Partial("_ViewModal")
<div id="modal-view" class="modal fade" tabindex="-1" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title badge badge-secondary-light" id="exampleModalLabel">
                    View Verify Transfer TIKTOK ERC20
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMaintainance">
                    <input type="hidden" class="hidId" value="0" />
                    <div class="form-group">
                        <label class="form-control-label"> Transaction Hash</label>
                        <input type="text" class="form-control txtTransactionHash">
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Amount Transfer</label>
                        <input type="text" class="form-control numberFormat txtAmount">
                    </div>

                    <div class="form-group">
                        <label for="txtImage" class="form-control-label"> Image Transfer</label>
                        <div class="boxImage" style="margin-bottom:15px;border: 1px solid #dbdbdb;border-radius: 5px;" />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Admin Note</label>
                        <textarea rows="4" class="form-control txtNote"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label"> Type: </label>
                        <span class="txtType" style="font-size:15px;"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btnApprove">Approve</button>
                <button type="button" class="btn btn-danger btnReject">Reject</button>
            </div>
        </div>
    </div>
</div>
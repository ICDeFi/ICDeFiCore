@{
    ViewData["Title"] = "Support";
}
@section Styles{
    <link href="~/admin-app/controllers/support-manage/index.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/admin-app/controllers/support-manage/index.js"></script>
    <script>
        var supportManageObj = new SupportManageController();
        supportManageObj.initialize();
    </script>
}

<div class="app-content icon-content">
    <div class="section">
        <!-- Page-header opened -->
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
            <div class="mt-3 mt-lg-0"></div>
        </div>
        <!-- Page-header closed -->
        <!-- row opened -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive product-datatable">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-8">

                                    </div>
                                    <div class="col-sm-12 col-md-4">
                                        <div class="dataTables_component"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                                            <thead>
                                                <tr>
                                                    <th>UserName</th>
                                                    <th>Title</th>
                                                    <th>Content</th>
                                                    <th>Anwser</th>
                                                    <th>Status</th>
                                                    <th>Function</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                                @await Component.InvokeAsync("Paging")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{UserName}}</td>
        <td>{{Name}}</td>
        <td>{{{RequestContent}}}</td>
        <td>{{{ResponseContent}}}</td>
        <td>{{{Type}}}</td>
        <td>
            <a href="#" data-id="{{Id}}" class="btn-edit btn btn-info btn-sm mb-2 mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Chi Tiết"><i class="fa fa-eye"></i> Detail</a>
        </td>
    </tr>
</script>
@Html.Partial("_EditModal")

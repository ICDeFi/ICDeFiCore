@{
    ViewData["Title"] = "Feedback";
}
@section Styles{
    <link href="~/admin-app/controllers/feedback/index.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/admin-app/controllers/feedback/index.js"></script>
    <script>
        var feedbackObj = new FeedbackController();
        feedbackObj.initialize();
    </script>
}

<div class="app-content icon-content">
    <div class="section">
        <!-- Page-header opened -->
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Overview</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </div>
        <!-- Page-header closed -->
        <!-- row opened -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive product-datatable">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-8">
                                        <div id="example_filter" class="dataTables_filter">
                                            <label>Search:<input type="search" id="txt-search-keyword" class="form-control form-control-sm" placeholder="" aria-controls="example"></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4"></div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Full Name</th>
                                                    <th>Phone</th>
                                                    <th>Email</th>
                                                    <th>Status</th>
                                                    <th>Created By</th>
                                                    <th>Updated Date</th>
                                                    <th>Function</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                                @await Component.InvokeAsync("Paging")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Title}}</td>
        <td>{{{FullName}}}</td>
        <td>{{Phone}}</td>
        <td>{{Email}}</td>
        <td width="90">{{{Type}}}</td>
        <td width="80">{{ModifiedBy}}</td>
        <td width="100">{{ModifiedDate}}</td>
        <td width="120">
            <a href="#" data-id="{{Id}}" class="btn-edit btn btn-info btn-sm mb-2 mb-xl-0 text-white"><i class="fa fa-eye"></i></a>
            <a href="#" data-id="{{Id}}" class="btn-change-type btn btn-primary btn-sm mb-2 mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Xem"><i class="fa fa-edit"></i></a>
            <a href="#" data-id="{{Id}}" class="btn-delete btn btn-danger btn-sm mb-xl-0 text-white" data-toggle="tooltip" data-original-title="Xóa"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
</script>
@Html.Partial("_AddEditModal")